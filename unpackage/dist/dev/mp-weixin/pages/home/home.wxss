/* 水平间距 */
.ipt {
  width: 100%;
  position: fixed;
  top: 0;
  padding-bottom: 10px;
  display: flex;
  border-bottom: 1px solid #aaa;
}
.ipt text {
  font-weight: bold;
}
.ipt input {
  border: 1px solid #aaa;
  border-radius: 10px;
  margin-left: 30px;
  padding-left: 50px;
}
.banner {
  margin-top: 35px;
}
.banner image {
  width: 100%;
}
.ul {
  width: 95%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  text-align: center;
  border-radius: 10px;
  box-shadow: 2px 2px 5px #000;
  margin-top: 10px;
  margin-bottom: 10px;
}
.ul .li {
  width: 20%;
  padding: 30px 0 20px 0;
}
.h2 {
  width: 100%;
  line-height: 40px;
  padding: 10px 0;
}
.h2 .left {
  float: left;
}
.h2 .right {
  float: right;
}
.ull {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.ull .lii {
  width: 48%;
}
.ull .lii image {
  width: 100%;
  border-radius: 5px;
}

